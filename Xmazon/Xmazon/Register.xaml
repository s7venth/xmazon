<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Xmazon.Register">
	<ContentPage.Content>



      <StackLayout BackgroundColor="#3C697E" Spacing="10" >
        <StackLayout  Spacing="10" VerticalOptions="CenterAndExpand" Padding="20">
          
          <Entry  Placeholder="Nom" x:Name="nomEntry" />
          <Entry  Placeholder="Prénom" x:Name="prenomEntry" />
          <Entry  Placeholder="Email" x:Name="emailEntry" />
          <Entry  Placeholder="Mot de pass" x:Name="passEntry" />
          <Entry  Placeholder="Confirmation" x:Name="confEntry" />

          <Button  BackgroundColor="#43E56A" Text="Valider" Clicked="OnValidClicked"></Button>

        </StackLayout>

      </StackLayout>   
          


	</ContentPage.Content>
</ContentPage>
